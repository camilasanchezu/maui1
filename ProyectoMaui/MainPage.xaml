<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="woody_bad.jpg"
                SemanticProperties.Description="Camila Sánchez"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Bienvenidos a la tienda de Albums!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="30"
                HorizontalOptions="Center" />

            <Label
                Text="Tienda de Música"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Vinilos y Cds"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Ingresar"
                SemanticProperties.Hint="Hola!"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
